.l-grid
  .l-grid__item.palm--one-whole.one-half>
    %h1.o-headline= "Sign in"
    .l-form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .l-form__row
          .l-form__label= f.label :email
          = f.email_field :email, autofocus: true, class: "o-input"
        .l-form__row
          .l-form__label= f.label :password 
          = f.password_field :password, autocomplete: "off", class: "o-input"
        .l-form__row
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me
        .l-form__row
          = f.submit "Sign in", class: "o-button o-button--green"
        .l-form__row
          = link_to "Forgot your password?", new_user_password_path

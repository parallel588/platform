.l-grid.l-grid--big-gutter
  .l-grid__item.palm--one-whole.one-half>
    %h1.o-headline= "Change your password"
    .l-form.is-active
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.hidden_field :reset_password_token
        .l-form__row
          .l-form__label= f.label :password, "New password" 
          = f.email_field :password, autofocus: true, class: "o-input"
        .l-form__row
          .l-form__label= f.label :password_confirmation, "Confirm new password" 
          = f.email_field :password_confirmation, autofocus: true, class: "o-input"
        .l-form__row
          = f.submit "Change my password", class: "o-button o-button--orange"
  .l-grid__item.palm--one-whole.one-half>
    = devise_error_messages!

.l-grid.l-grid--big-gutter
  .l-grid__item.palm--one-whole.one-half>
    %h1.o-headline= "Forgot your password?"
    .l-form.is-active
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
        .l-form__row
          .l-form__label= f.label :email
          = f.email_field :email, autofocus: true, class: "o-input"
        .l-form__row
          = f.submit "Send me reset password instructions", class: "o-button o-button--orange"
  .l-grid__item.palm--one-whole.one-half>
    = devise_error_messages!
%h2= "Rate Seller #{@buyer.name} (#{@buyer.email})"
%hr
%h2= "This rating concerns the oder: #{@order.id} for the product: #{@order.auction.product.name} / Auction Id: #{@order.auction.id}"

%hr

= simple_form_for(@new_rating, :url => rate_buyer_order_path(@order), :method => :put) do |f| 
  .field
    = f.input :stars
  .field
    = f.input :review
  .field
    = f.input :auction_id, :input_html => {:value => @order.auction.id}
  .actions
    = f.submit



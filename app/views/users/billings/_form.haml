= simple_form_for @billing, :url => preferences_billing_user_path(current_user), :method => :put do |billings_form| 
    %p
    = billings_form.input :card_number, input_html: { class: "o-input" }
    = billings_form.input :expiration_date, input_html: { class: "o-input" }
    = billings_form.input :three_digit, input_html: { class: "o-input" }
    = billings_form.input :first_name, value: current_user.name.blank? ? "" : @user.name.split(" ")[0], input_html: { class: "o-input" }
    = billings_form.input :last_name, value: current_user.name.blank? ? "" : @user.name.split(" ")[1], input_html: { class: "o-input" }
    = billings_form.input :address_line_1, input_html: { class: "o-input" }
    = billings_form.input :address_line_2, input_html: { class: "o-input" }
    = billings_form.input :city, input_html: { class: "o-input" }
    = billings_form.input :state, input_html: { class: "o-input" }
    = billings_form.input :postal_code, input_html: { class: "o-input" }
    = billings_form.input :country, input_html: { class: "o-input" }
    = billings_form.input :vat_number, input_html: { class: "o-input" }
    
    = billings_form.submit :value => "Save this" 
